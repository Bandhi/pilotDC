      }
        
     }
     document.getElementById('whole').innerHTML = document.getElementById('whole').innerHTML + "</div>"
    }
    function wow(e) {
      document.getElementById('hacky' + e).innerHTML = dumb[parseInt(e)] + ' <i class="fa fa-thumbs-o-up"></i>';
    }
    function lel(e) {
      document.getElementById('hacky' + e).innerHTML = dumb[parseInt(e)] + ' <i class="fa fa-thumbs-o-down"></i>';
    }
    
