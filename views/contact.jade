extends layout

block content
  head
    title hello
  body(style = "background-color: darkblue")
  .page-header
    h3(style = "color: white; padding-left: 250px;") Call Out a Canidate

  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='name' style = "color:white") Name
      .col-sm-8
        input.form-control(type='text', name='name', id='name', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='email' style = "color:white") Candidate
      .col-sm-8
        input.form-control(type='text', name='email', id='email')
    .form-group
      label(class='col-sm-2 control-label', for='email' style = "color:white") Issue Name
      .col-sm-8
        input.form-control(type='text', name='title', id='title')
    .form-group
      label(class='col-sm-2 control-label', for='message' style = "color:white") Explanation
      .col-sm-8
        textarea.form-control(type='text', name='message', id='message', rows='7')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Send